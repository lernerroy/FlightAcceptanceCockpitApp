<core:FragmentDefinition xmlns:m="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:semantic="sap.m.semantic"
	xmlns:footerbar="sap.ushell.ui.footerbar" xmlns="sap.uxap" xmlns:layout="sap.ui.layout" xmlns:core="sap.ui.core"
	xmlns:f="sap.ui.layout.form">
	<m:Panel id="passengerInfoPanel" expandable="true" expanded="true">
		<m:headerToolbar>
			<m:Toolbar style="Standard">
				<m:Title text="{lobView>/infoPanelTitle}"/>
			</m:Toolbar>
		</m:headerToolbar>
		<m:content>
			<layout:Grid id="gridPassDetails" class="sapUiTinyMargin" hSpacing="1" vSpacing="1" defaultSpan="L6 M6 S12" defaultIndent="L0 M0 S0"
				width="100%">
				<layout:content width="100%">
					<m:HBox class="sapUiMediumMarginBeginEnd">
						<m:Label design="Bold" text="{i18n>LBL_FIRST_CLASS_TXT}" class="sapUiTinyMarginEnd"/>
						<m:Text text="{FirstClassPax}"/>
					</m:HBox>
					<m:HBox class="sapUiMediumMarginBeginEnd">
						<m:Label design="Bold" text="{i18n>LBL_BUSINESS_CLASS_TXT}" class="sapUiTinyMarginEnd"/>
						<m:Text text="{BusClassPax}"/>
					</m:HBox>
					<m:HBox class="sapUiMediumMarginBeginEnd">
						<m:Label design="Bold" text="{i18n>LBL_PERMIM_CLASS_TXT}" class="sapUiTinyMarginEnd"/>
						<m:Text text="{PremEcoPax}"/>
					</m:HBox>
					<m:HBox class="sapUiMediumMarginBeginEnd">
						<m:Label design="Bold" text="{i18n>LBL_ECONOMY_CLASS_TXT}" class="sapUiTinyMarginEnd"/>
						<m:Text text="{EcoPax}"/>
					</m:HBox>
					<m:HBox class="sapUiMediumMarginBeginEnd">
						<m:Label design="Bold" text="{i18n>LBL_TOTAL_PASSANGERS_TXT}" class="sapUiTinyMarginEnd"/>
						<m:Text text="{TotalPax}"/>
					</m:HBox>
				</layout:content>
			</layout:Grid>
		</m:content>
	</m:Panel>
</core:FragmentDefinition>
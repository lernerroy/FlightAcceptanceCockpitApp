<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:semantic="sap.f.semantic" xmlns:uxap="sap.uxap"
	xmlns:html="http://www.w3.org/1999/xhtml" controllerName="com.legstate.fts.app.FlightAcceptanceCockpit.controller.AirportCharges">
	<semantic:SemanticPage showFooter="true" id="lobPage" busy="{lobView>/busy}" busyIndicatorDelay="{lobView>/delay}">
		<semantic:titleHeading>
			<Title text="Airport Charges"/>
		</semantic:titleHeading>
		<semantic:footerCustomActions>
			<Button icon="sap-icon://edit" text="Edit" visible='{= !${lobView>/editMode}}' press=".onEditPressed"/>
			<Button icon="sap-icon://decline" text="Cancel" press=".onCancelEdit" visible='{= ${lobView>/editMode}}'/>
			<Button icon="sap-icon://accept" text="Save" type="Emphasized" press=".onSaveFlight" visible='{= ${lobView>/editMode}}'/>
			<!--<Button icon='{= ${lobView>/editMode} === true ? "sap-icon://display" : "sap-icon://edit"}' press=".toggleEditMode"/>-->
		</semantic:footerCustomActions>
		<semantic:content>
			<IconTabBar id="TabBar" stretchContentHeight="true" upperCase="true" expanded="{device>/isNoPhone}" select=".onTabSelected"
				backgroundDesign="Transparent" expandable="false">
				<items>
					<IconTabFilter key="ARR" id="arrivalTab" design="Horizontal" text="Arrival" icon="sap-icon://fa/arrival">
						<ScrollContainer id="scrollContArrival" width="100%" height="100%" horizontal="false" vertical="true">
							<core:Fragment id="arrPassangerInfoFragment" fragmentName="com.legstate.fts.app.FlightAcceptanceCockpit.fragments.PassangerDetails"
								type="XML"/>
							<core:Fragment id="arrServices" fragmentName="com.legstate.fts.app.FlightAcceptanceCockpit.fragments.Services" type="XML"/>
						</ScrollContainer>
					</IconTabFilter>
					<IconTabSeparator icon=""/>
					<IconTabFilter key="DEP" id="depatureTab" design="Horizontal" text="Departure" icon="sap-icon://fa/departure">
						<ScrollContainer width="100%" height="100%" horizontal="false" vertical="true">
							<core:Fragment id="depPassangerInfoFragment" fragmentName="com.legstate.fts.app.FlightAcceptanceCockpit.fragments.PassangerDetails"
								type="XML"/>
							<core:Fragment id="depServices" fragmentName="com.legstate.fts.app.FlightAcceptanceCockpit.fragments.Services" type="XML"/>
						</ScrollContainer>
					</IconTabFilter>
				</items>
			</IconTabBar>
		</semantic:content>
		<semantic:closeAction>
			<semantic:CloseAction id="closeColumn" press=".onClose"/>
		</semantic:closeAction>
	</semantic:SemanticPage>
</mvc:View>
<mvc:View xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:uxap="sap.uxap" xmlns:semantic="sap.f.semantic" xmlns:l="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc" xmlns:f="sap.f" xmlns:grid="sap.ui.layout.cssgrid" controllerName="com.legstate.fts.app.FlightAcceptanceCockpit.controller.Detail">
	<semantic:SemanticPage id="detailPage" busy="{detailView>/busy}" busyIndicatorDelay="{detailView>/delay}">
		<!--<semantic:titleHeading></semantic:titleHeading>-->
		<!--<semantic:headerContent></semantic:headerContent>-->
		<semantic:content>
			<uxap:ObjectPageLayout id="objectPageLayout" enableLazyLoading="false" subSectionLayout="TitleOnLeft" showTitleInHeaderContent="false" showHeaderContent="true">
				<uxap:headerTitle>
					<uxap:ObjectPageHeader objectImageURI="sap-icon://fa/airplane" objectImageShape="Circle" objectTitle="{i18n>TIT_FLIGHT_ORDER_TXT}" id="ObjectPageLayoutHeaderTitle" isObjectIconAlwaysVisible="true" isObjectTitleAlwaysVisible="true" isObjectSubtitleAlwaysVisible="true" isActionAreaAlwaysVisible="true" showPlaceholder="true">
						<uxap:actions/>
					</uxap:ObjectPageHeader>
				</uxap:headerTitle>
				<uxap:headerContent>
					<VBox width="100%">
						<l:Grid width="auto" vSpacing="0" defaultSpan="XL6 L6 M6 S12" class="sapUiSmallMarginTop">
							<!-- Arrival flight details -->
							<VBox backgroundDesign="Transparent" class="sapUiSmallMarginBottom">
								<HBox class="sapUiTinyMarginBottom">
									<core:Icon src="sap-icon://fa/arrival" class="sapUiTinyMarginEnd"/>
									<Title text="{Precarriercode}{Preflightno} {Predepairp}-{Prearrairp}" level="H1" titleStyle="H3"/>
								</HBox>
								<HBox>
									<Label text="Order Number" design="Bold" class="sapUiTinyMarginEnd"/>
									<Text text="{Aufnr}"/>
								</HBox>
								<HBox>
									<Label text="Scheduled Date / Time" design="Bold" class="sapUiTinyMarginEnd"/>
									<Text text="{ path: 'Prearrdate', type: 'sap.ui.model.odata.type.DateTime', formatOptions: { GMT: true,pattern : 'dd MMM yyyy' } } " class="sapUiTinyMarginEnd"/>
									<Text text="{ path : 'Prearrtime', type: 'sap.ui.model.odata.type.Time', formatOptions: { pattern: 'h:mm:ss' }} "/>
								</HBox>
								<HBox>
									<Label text="Actual Date / Time" design="Bold" class="sapUiTinyMarginEnd"/>
									<Text text="{ path: 'Prearrdate', type: 'sap.ui.model.odata.type.DateTime', formatOptions: { GMT: true,pattern : 'dd MMM yyyy' } } " class="sapUiTinyMarginEnd"/>
									<Text text="{ path : 'Prearrtime', type: 'sap.ui.model.odata.type.Time', formatOptions: { pattern: 'h:mm:ss' }} "/>
								</HBox>
								<HBox>
									<Label text="Takeoff Time" design="Bold" class="sapUiTinyMarginEnd"/>
									<Text text="{ path : 'Prearrtime', type: 'sap.ui.model.odata.type.Time', formatOptions: { pattern: 'h:mm:ss' }} "/>
								</HBox>
							</VBox>
							<!-- Departure flight details  -->
							<VBox backgroundDesign="Transparent">
								<HBox class="sapUiTinyMarginBottom">
									<core:Icon src="sap-icon://fa/departure" class="sapUiTinyMarginEnd"/>
									<Title text="{Precarriercode}{Flightno} {Prearrairp}-{Arrairp}" level="H1" titleStyle="H3" class="sapUiTinyMarginEnd"/>
								</HBox>
								<HBox>
									<Label text="Order Number" design="Bold" class="sapUiTinyMarginEnd"/>
									<Text text="{Preaufnr}"/>
								</HBox>
								<HBox>
									<Label text="Scheduled Date / Time" design="Bold" class="sapUiTinyMarginEnd"/>
									<Text text="{ path: 'Depdate', type: 'sap.ui.model.odata.type.DateTime', formatOptions: { GMT: true,pattern : 'dd MMM yyyy' } } " class="sapUiTinyMarginEnd"/>
									<Text text=" { path : 'Deptime', type: 'sap.ui.model.odata.type.Time', formatOptions: { pattern: 'h:mm:ss' }} "/>
								</HBox>
								<HBox>
									<Label text="Actual Date / Time" design="Bold" class="sapUiTinyMarginEnd"/>
									<Text text="{ path: 'Depdate', type: 'sap.ui.model.odata.type.DateTime', formatOptions: { GMT: true,pattern : 'dd MMM yyyy' } } " class="sapUiTinyMarginEnd"/>
									<Text text=" { path : 'Deptime', type: 'sap.ui.model.odata.type.Time', formatOptions: { pattern: 'h:mm:ss' }} "/>
								</HBox>
								<HBox>
									<Label text="Takeoff Time" design="Bold" class="sapUiTinyMarginEnd"/>
									<Text text=" { path : 'Deptime', type: 'sap.ui.model.odata.type.Time', formatOptions: { pattern: 'h:mm:ss' }} "/>
								</HBox>
							</VBox>
						</l:Grid>
					</VBox>
				</uxap:headerContent>
				<uxap:sections>
					<uxap:ObjectPageSection showTitle="false">
						<uxap:subSections>
							<uxap:ObjectPageSubSection>
								<uxap:blocks>
									<f:GridList width="100%" items="{ path: 'lobs>/' }" itemPress=".onLobSelected">
										<CustomListItem type="Navigation" class="sapUiTinyMargin lob-card" highlight="None">
											<HBox justifyContent="SpaceBetween" fitContainer="true" alignItems="Center" class="sapUiSmallMargin" alignContent="Center">
												<Title text="{lobs>title}" level="H3" titleStyle="H3" class="sapUiSmallMarginEnd"/>
												<Image width="10rem" height="5rem" src="{lobs>imageSrc}" visible="{= ${device>/system/phone} ? false : true}"/>
											</HBox>
										</CustomListItem>
										<f:customLayout>
											<!--Represnts the number of items in each grid row  -->
											<grid:GridBoxLayout boxesPerRowConfig="XL1 L1 M1 S1"/>
										</f:customLayout>
									</f:GridList>
								</uxap:blocks>
							</uxap:ObjectPageSubSection>
						</uxap:subSections>
					</uxap:ObjectPageSection>
				</uxap:sections>
			</uxap:ObjectPageLayout>
		</semantic:content>
		<semantic:closeAction>
			<semantic:CloseAction id="closeColumn" press=".onCloseDetailPress"/>
		</semantic:closeAction>
	</semantic:SemanticPage>
</mvc:View>
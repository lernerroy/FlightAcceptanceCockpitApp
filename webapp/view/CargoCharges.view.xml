<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:semantic="sap.f.semantic" xmlns:uxap="sap.uxap"
	controllerName="com.legstate.fts.app.FlightAcceptanceCockpit.controller.CargoCharges" xmlns:html="http://www.w3.org/1999/xhtml">
	<semantic:SemanticPage id="lobPage" busy="{cargoChargesView>/busy}" busyIndicatorDelay="{cargoChargesView>/delay}">
		<!-- Title Heading-->
		<semantic:titleHeading>
			<Title text="Cargo Charges"/>
		</semantic:titleHeading>
		<semantic:content>
			<uxap:ObjectPageLayout id="objectPageLayout" enableLazyLoading="false" subSectionLayout="TitleOnLeft" showTitleInHeaderContent="false"
				showHeaderContent="true"></uxap:ObjectPageLayout>
			<IconTabBar id="TabBar" stretchContentHeight="true" upperCase="false" expanded="{device>/isNoPhone}" select=".onTabSelected"
				backgroundDesign="Translucent">
				<items>
					<IconTabFilter key="ARR" id="arrivalTab" design="Horizontal" text="Arrival" icon="sap-icon://fa/arrival">
						<ScrollContainer id="scrollContArrival" width="100%" height="100%" horizontal="false" vertical="true">
							<core:Fragment id="arrCargoDetails" fragmentName="com.legstate.fts.app.FlightAcceptanceCockpit.fragments.PassangerDetails"
								type="XML"/>
							<core:Fragment id="arrServices" fragmentName="com.legstate.fts.app.FlightAcceptanceCockpit.fragments.Services" type="XML"/>
						</ScrollContainer>
					</IconTabFilter>
					<IconTabSeparator icon=""/>
					<IconTabFilter key="DEP" id="depatureTab" design="Horizontal" text="Departure" icon="sap-icon://fa/departure">
						<ScrollContainer width="100%" height="100%" horizontal="false" vertical="true">
							<core:Fragment id="depCargoDetails" fragmentName="com.legstate.fts.app.FlightAcceptanceCockpit.fragments.PassangerDetails"
								type="XML"/>
							<core:Fragment id="depServices" fragmentName="com.legstate.fts.app.FlightAcceptanceCockpit.fragments.Services" type="XML"/>
						</ScrollContainer>
					</IconTabFilter>
				</items>
			</IconTabBar>
		</semantic:content>
		<semantic:closeAction>
			<semantic:CloseAction id="closeColumn" press=".onNavBack"/>
		</semantic:closeAction>
	</semantic:SemanticPage>
</mvc:View>